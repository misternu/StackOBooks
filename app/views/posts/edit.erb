<div class="new-post">
<h2>Edit your post</h2>
<form action = "/posts/<%= @post.id %>" method = "post">
  <fieldset class="form-group">
  <input class="form-control" placeholder = "Post title" type = "text" name ="post[title]" value ="<%= @post.title %>">
</fieldset>
  <fieldset class="form-group">
  <textarea class="form-control" placeholder = "Post body" type = "text" rows=10 contenteditable="true" name = "post[body]"><%= @post.body %></textarea>
</fieldset>
  <input type="hidden" name="_method" value="put">
  <input type = "submit" value = "Submit post" class="btn btn-secondary">
</form>
<form action = "/posts/<%= @post.id %>" method = "post">
  <fieldset>
  <input class="form-control" type="hidden" name="_method" value="delete">
</fieldset>
  <input type = "submit" value = "Delete post" class="btn btn-secondary">
</form>
</div>