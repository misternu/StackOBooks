<article>
  <h3><%= @post.title %></h3>
  <p><%= @post.body %></p>
  <form method="get" action="/posts/<%= @post.id %>/responses/new">
    <input type="submit" value="Respond to question">
  </form>
  <div class="comment-section">
    <h4>Comments:</h4>
    <% @post.responses.each do |response| %>
      <%= erb :"_comment_detail", locals: { response: response }%>
    <% end %>
  </div>

</article>
