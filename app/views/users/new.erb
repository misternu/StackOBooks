<form action = "/users" method = "post">
  <input placeholder = "Enter a username" type = "text" name ="user[username]" >
  <input placeholder = "Enter a password" type = "password" name = "user[password]">
  <input type = "submit" value = "Register">
</form>
<br>

  <% if @errors %>
    <div class="errors-wrapper">
      <span>Your entry could not be saved:</span>
      <ul class="errors">
        <% @errors.each do |error| %>
          <li class="error"><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
